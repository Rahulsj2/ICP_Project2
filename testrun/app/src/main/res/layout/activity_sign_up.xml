<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".sign_up" android:background="@drawable/image2">

    <TextView
            android:text="SIGN UP"
            android:layout_width="279dp"
            android:layout_height="0dp"
            android:id="@+id/textView5" android:layout_marginTop="51dp"
            android:layout_marginBottom="46dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginRight="1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginTop="86dp"
            android:layout_marginLeft="1dp" app:layout_constraintBottom_toBottomOf="@+id/textView7"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/editText4"
            android:layout_marginBottom="89dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Username"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginBottom="66dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="65dp" app:layout_constraintBottom_toTopOf="@+id/textView8"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginBottom="63dp" app:layout_constraintBottom_toTopOf="@+id/signup"/>
    <Button
            android:text="SIGN UP"
            android:layout_width="121dp"
            android:layout_height="0dp"
            android:id="@+id/signup" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="115dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="115dp" app:layout_constraintTop_toBottomOf="@+id/editText6"
            android:layout_marginBottom="27dp"/>
    <TextView
            android:text="Email Address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/editText4" android:layout_marginBottom="87dp"
            app:layout_constraintEnd_toEndOf="@+id/textView7" app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/editText5"/>
    <TextView
            android:text="Password"
            android:layout_width="146dp"
            android:layout_height="0dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/editText5" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/editText5"/>
    <TextView
            android:text="Confirm Password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/editText5" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/editText6" app:layout_constraintBottom_toTopOf="@+id/editText6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginEnd="46dp" android:layout_marginRight="46dp"/>
</android.support.constraint.ConstraintLayout>