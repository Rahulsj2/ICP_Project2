<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignIn" android:id="@+id/constraintLayout2">

    <android.support.constraint.ConstraintLayout
            android:background="@drawable/image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:context=".SignInPage" android:id="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:text="SIGN IN"
                android:layout_width="305dp"
                android:layout_height="0dp"
                android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="41dp"
                android:layout_marginBottom="325dp" app:layout_constraintBottom_toTopOf="@+id/login"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="147dp" android:layout_marginStart="147dp"/>
        <EditText
                android:layout_width="217dp"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:text="Username" app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:layout_marginBottom="49dp" app:layout_constraintEnd_toEndOf="@+id/editText3"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4"/>
        <EditText
                android:layout_width="219dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText3"
                android:text="Pasword" app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginBottom="408dp"/>
        <TextView
                android:text="Password"
                android:layout_width="115dp"
                android:layout_height="25dp"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
                app:layout_constraintBottom_toTopOf="@+id/editText3"/>
        <Button
                android:text="LOG IN"
                android:layout_width="139dp"
                android:layout_height="51dp"
                android:id="@+id/login"
                android:layout_marginBottom="262dp"
                app:layout_constraintEnd_toEndOf="@+id/editText3" app:layout_constraintBottom_toBottomOf="parent"
        />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>